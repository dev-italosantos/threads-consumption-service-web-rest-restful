<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:text="Switch"
        app:layout_constraintBottom_toTopOf="@+id/btnIniciarThread"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:layout_editor_absoluteX="136dp" />

    <Button
        android:id="@+id/btnIniciarThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startThread"
        android:text="Iniciar Thread"
        app:layout_constraintBottom_toTopOf="@+id/btnStopThread"
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        tools:layout_editor_absoluteX="128dp" />

    <Button
        android:id="@+id/btnStopThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stopThread"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/btnProLayout"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciarThread"
        tools:layout_editor_absoluteX="158dp" />

    <Button
        android:id="@+id/btnProLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="nextLayout"
        android:text="PrÃ³ximo Layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStopThread"
        tools:layout_editor_absoluteX="122dp" />

</androidx.constraintlayout.widget.ConstraintLayout>